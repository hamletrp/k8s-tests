apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: rancher
  namespace: argocd
spec:
  project: default

  source:
    repoURL: https://releases.rancher.com/server-charts/latest
    chart: rancher
    targetRevision: 2.8.2  # Use latest version from Rancher
    helm:
      values: |
        hostname: rancher.itsnotrocketscience.tech
        ingress:
          enabled: true
          ingressClassName: nginx
          tls: true
          extraAnnotations:
            kubernetes.io/ingress.class: nginx
            cert-manager.io/cluster-issuer: letsencrypt-prod
        replicas: 3
        bootstrapPassword: admin123  # Set a secure password

  destination:
    server: https://kubernetes.default.svc
    namespace: cattle-system

  syncPolicy:
    automated:
      selfHeal: true
      prune: true
    syncOptions:
      - CreateNamespace=true
